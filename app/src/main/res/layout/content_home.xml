<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.thonners.plybl.HomeActivity"
    tools:showIn="@layout/app_bar_home">

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_chairs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        app:elevation="@dimen/fab_resting_z"
        app:borderWidth="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/header_banner_image"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/fab_tables"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.501"
        app:srcCompat="@drawable/ic_weekend_white_24dp" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_tables"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:clickable="true"
        app:elevation="@dimen/fab_resting_z"
        app:borderWidth="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/header_banner_image"
        app:layout_constraintLeft_toRightOf="@+id/fab_chairs"
        app:layout_constraintRight_toLeftOf="@+id/fab_shelves"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.501"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_shelves"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:clickable="true"
        app:elevation="@dimen/fab_resting_z"
        app:borderWidth="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/header_banner_image"
        app:layout_constraintLeft_toRightOf="@+id/fab_tables"
        app:layout_constraintRight_toLeftOf="@+id/fab_garden"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.501"
        app:srcCompat="@drawable/ic_line_style_white_24dp" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_garden"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:clickable="true"
        app:elevation="@dimen/fab_resting_z"
        app:borderWidth="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/header_banner_image"
        app:layout_constraintLeft_toRightOf="@+id/fab_shelves"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.501"
        app:srcCompat="@drawable/ic_nature_people_white_24dp" />

    <ImageView
        android:id="@+id/header_banner_image"
        android:layout_width="0dp"
        android:layout_height="196dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:adjustViewBounds="false"
        android:cropToPadding="false"
        android:scaleType="centerCrop"
        android:src="@drawable/home_page_banner"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/header_banner_image"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="0dp"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="parent" />


</android.support.constraint.ConstraintLayout>

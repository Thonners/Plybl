<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.thonners.plybl.PayActivity">

    <fragment
        xmlns:wallet="http://schemas.android.com/apk/res-auto"
        android:id="@+id/pay_fragment_buy_button"
        android:name="com.google.android.gms.wallet.fragment.WalletFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        wallet:environment="test"
        wallet:fragmentMode="buyButton"/>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="196dp"
        android:layout_margin="8dp"
        app:cardCornerRadius="@dimen/card_radius"
        app:cardElevation="@dimen/cardview_default_elevation"
        app:cardBackgroundColor="@color/cardview_dark_background">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp">
            <TextView
                android:id="@+id/known_card_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_margin="8dp"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:text="Visa"/>
            <TextView
                android:id="@+id/known_card_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/known_card_name"
                android:layout_margin="8dp"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:text="**** **** **** 1234"/>
            <TextView
                android:id="@+id/known_card_exp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/known_card_no"
                android:layout_margin="8dp"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:text="06/22"/>
            <TextView
                android:id="@+id/known_card_holder_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/known_card_exp"
                android:layout_margin="8dp"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:text="Mr Drew Peacock"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="196dp"
        android:layout_margin="8dp"
        app:cardCornerRadius="@dimen/card_radius"
        app:cardElevation="@dimen/cardview_default_elevation">
            <TextView
                android:id="@+id/add_new_prompt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_margin="8dp"
                android:textSize="28sp"
                android:textColor="@color/cardview_dark_background"
                android:text="Add new card"/>


    </android.support.v7.widget.CardView>
</LinearLayout>

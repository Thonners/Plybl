<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dialog_main_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/card_default_margin"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <android.support.v7.widget.CardView
        android:id="@+id/dialog_continue_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/colorPrimaryDark"
        app:cardCornerRadius="@dimen/card_radius"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp">
        <TextView
            android:padding="@dimen/card_default_margin"
            android:id="@+id/dialog_continue_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/checkout_popup_keep_shopping"
            android:textColor="@color/white"
            android:textSize="@dimen/dialog_big_text"
            android:textAlignment="center"/>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/dialog_chair_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/card_radius"
        app:layout_constraintRight_toLeftOf="@+id/dialog_shelving_card"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/dialog_continue_card"
        android:background="@drawable/bookcase_1">
        <ImageView
            android:layout_width="@dimen/dialog_image_size"
            android:layout_height="@dimen/dialog_image_size"
            android:src="@drawable/chair_3_128"
            android:scaleType="centerCrop"/>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/dialog_shelving_card"
        android:layout_width="wrap_content"
        app:cardCornerRadius="@dimen/card_radius"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toLeftOf="@+id/dialog_table_card"
        app:layout_constraintLeft_toRightOf="@+id/dialog_chair_card"
        app:layout_constraintTop_toTopOf="@+id/dialog_chair_card">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="@dimen/dialog_image_size"
            android:layout_height="@dimen/dialog_image_size"
            android:layout_marginTop="0dp"
            app:layout_constraintTop_toTopOf="@+id/dialog_chair_card"
            tools:layout_editor_absoluteX="132dp"
            android:src="@drawable/bookcase_1_128"
            android:scaleType="centerCrop"/>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/dialog_table_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/card_radius"
        app:layout_constraintTop_toTopOf="@+id/dialog_chair_card"
        app:layout_constraintRight_toLeftOf="@+id/dialog_outdoor_card"
        app:layout_constraintLeft_toRightOf="@+id/dialog_shelving_card">
        <ImageView
            android:layout_width="@dimen/dialog_image_size"
            android:layout_height="@dimen/dialog_image_size"
            android:src="@drawable/table_1_128"
            android:scaleType="centerCrop"/>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/dialog_outdoor_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/card_radius"
        app:layout_constraintTop_toTopOf="@+id/dialog_chair_card"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/dialog_table_card">
        <ImageView
            android:layout_width="@dimen/dialog_image_size"
            android:layout_height="@dimen/dialog_image_size"
            android:src="@drawable/outdoor_1_128"
            android:scaleType="centerCrop"/>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/dialog_checkout_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/colorPrimaryDark"
        app:cardCornerRadius="@dimen/card_radius"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/dialog_chair_card"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp">
        <TextView
            android:padding="@dimen/card_default_margin"
            android:id="@+id/dialog_checkout_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/checkout_popup_checkout"
            android:textColor="@color/white"
            android:textSize="@dimen/dialog_big_text"
            android:textAlignment="center"/>
    </android.support.v7.widget.CardView>


</android.support.constraint.ConstraintLayout>